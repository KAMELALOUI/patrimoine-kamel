pipeline {
    agent any
    
    environment {
        GIT_REPO = 'https://github.com/KAMELALOUI/patrimoine-kamel.git'
        BRANCH_NAME = 'main'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: "${BRANCH_NAME}", url: "${GIT_REPO}"
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building...'
                // Place your build commands here, for example:
                // sh 'mvn clean install' for Maven projects
                // sh 'npm install' for Node.js projects
            }
        }
        
        stage('Test') {
            steps {
                echo 'Testing...'
                // Place your test commands here, for example:
                // sh 'mvn test' for Maven projects
                // sh 'npm test' for Node.js projects
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Place your deployment commands here
                // sh 'docker build -t your-image-name .' for Docker projects
                // sh 'docker run -d your-image-name'
            }
        }
    }
    
    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
        }
    }
}
