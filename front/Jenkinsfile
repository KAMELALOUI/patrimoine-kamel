pipeline {
    agent any
    
    environment {
        // Définir les variables d'environnement si nécessaire
        GIT_REPO = 'https://github.com/KAMELALOUI/patrimoine-kamel.git'
        BRANCH_NAME = 'main'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Cloner le dépôt
                git branch: "${BRANCH_NAME}", url: "${GIT_REPO}"
            }
        }
        
        stage('Build') {
            steps {
                // Commandes pour le build (ex. compilation)
                echo 'Building...'
                // Exemple : pour un projet Maven
                // sh 'mvn clean install'
                // Exemple : pour un projet Node.js
                // sh 'npm install'
            }
        }
        
        stage('Test') {
            steps {
                // Commandes pour les tests
                echo 'Testing...'
                // Exemple : pour un projet Maven
                // sh 'mvn test'
                // Exemple : pour un projet Node.js
                // sh 'npm test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Commandes pour le déploiement
                echo 'Deploying...'
                // Exemple : pour un déploiement Docker
                // sh 'docker build -t your-image-name .'
                // sh 'docker run -d your-image-name'
            }
        }
    }
    
    post {
        always {
            // Actions à effectuer après chaque build, qu'il réussisse ou échoue
            echo 'This will always run'
        }
        success {
            // Actions à effectuer seulement si le build réussit
            echo 'This will run only if successful'
        }
        failure {
            // Actions à effectuer seulement si le build échoue
            echo 'This will run only if failed'
        }
    }
}
